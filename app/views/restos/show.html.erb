     <!-- Here is the section -->

      <section id="counter" class="counter">
            <div class="main_counter_area">
                            <div class="main_counter_content d-flex flex-wrap justify-content-around">
                                <div class="p-2" style="width:100px;">
                                    <div class="h-100 w-100 single_counter rounded">
                                        <i class="fas fa-leaf m-b-1"></i>
                                        <br>
                                        <p>Vegan</p>
                                        <h2 class="statistic-counter"><%= @num_vegan_votes %></h2>
                                    </div>
                                </div>
                                <div class="p-2" style="width:100px;">
                                    <div class="h-100 w-100 single_counter rounded">
                                        <i class="fas fa-dove m-b-1"></i>
                                        <br>
                                        <p>Végétariens</p>
                                        <h2 class="statistic-counter"><%= @num_veggie_votes %></h2>

                                    </div>
                                </div>
                                <div class="p-2" style="width:100px;">
                                    <div class="h-100 w-100 single_counter rounded">
                                        <i class="fab fa-pagelines m-b-1"></i>
                                        <br>
                                        <p>Gluten-free</p>
                                        <h2 class="statistic-counter"><%= @num_gluten_votes %></h2>

                                    </div>
                                </div>
                                <div class="p-2" style="width:100px;">
                                    <div class="h-100 w-100 single_counter rounded">
                                        <i class="fa fa-globe m-b-1"></i>
                                        <br>
                                        <p>Au total</p>
                                        <h2 class="statistic-counter"><%= @num_votes %></h2>

                                    </div>
                                </div>
                            </div>
            </div>
        </section><!-- End of counter Section -->


