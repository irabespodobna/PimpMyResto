<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex"></div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="card-body">
            <h5 class="card-title text-center">Tu dois t'inscrire pour pouvoir voter</h5>
            <form class="form-signin">

              <div class="form-label-group">
                <%= f.text_field :first_name, autofocus: true, :placeholder=>"Prénom", :class=>"form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.text_field :last_name, autofocus: true, :placeholder=>"Nom", :class=>"form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control" %>
              </div>
              <hr>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", :placeholder=>"Mot de Passe", :class=>"form-control" %>
                <% if false %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>
                      caractères minimum)</em>
                  <% end %><br/>
                <% end %>
              </div>

              <div class="form-label-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder=>"Mot de Passe Confirmation", :class=>"form-control"%>
              </div>
              <%= f.submit "Créer un compte", :class=>"btn btn-lg btn btn-secondary btn-block"%>

              <a class="d-block text-center mt-2 small" href="/users/sign_in">J'ai déjà un compte</a>
              <hr class="my-4">
            </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
