<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card-body">
          <h5 class="card-title text-center">Se connecter</h5>
          <form class="form-signin">

            <div class="form-label-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control" %>
            </div>

            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "current-password", :placeholder=>"Mot de Passe", :class=>"form-control" %>
            </div>

            <div class="custom-control custom-checkbox mb-3">
              <input type="checkbox" class="custom-control-input" id="customCheck1">
              <label class="custom-control-label" for="customCheck1">Remember password</label>
            </div>
            <%= f.submit "Se connecter", :class=>"btn btn-lg btn btn-secondary btn-block" %>
            <hr class="my-4">
          </form>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
