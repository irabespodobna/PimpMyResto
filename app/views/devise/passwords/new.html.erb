<div class="container">
	<div class="row">
		<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
			<div class="card card-signin my-5">
				
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				<%= devise_error_messages! %>
				<div class="card-body">
					<h5 class="card-title text-center">Tu as oubli√© ton mot de passe?</h5>
					<form class="form-signin">


						<div class="form-label-group">
							<%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control" %>
						</div>

						
						<%= f.submit "Renvoie moi les instructions d'inscription", :class=>"btn btn-lg btn btn-secondary btn-block" %>
						<hr class="my-4">
					</form>
					<% end %>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
