<div class="container">
  <h1>Edition</h1>
  <hr>
  <div class="row">
    <!-- left column -->
    
    <h2>Edition <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <!-- edit form column -->
    <div class="col-md-9 personal-info">
      <div class="alert alert-info alert-dismissable">
        <a class="panel-close close" data-dismiss="alert">×</a>
        <i class="fa fa-coffee"></i>
        Ceci est une <strong>alerte !</strong> Vous pouvez changer vos informations ici
      </div>
      <h3>Infos personnelles</h3>

      <form class="form-horizontal" role="form">
        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :prénom %><br/></strong>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
          </div>
        </div>

        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :nom %></strong><br/>
            <%= f.text_field :last_name, autofocus: true %>
          </div>
        </div>

        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :email %><br/></strong>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>En attente de confirmation
              <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>

        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :mot_de_passe %></strong>
            <small>
              <i>(ne pas remplir si vous ne voulez pas le changer)</i><br/></small>
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br/>
              <small>
                <em><%= @minimum_password_length %>
                  caractères minimum</em>
              </small>
            <% end %>
          </div>
        </div>

        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :confirme_ton_mdp %><br/></strong>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group">

          <div class="col-md-8">
            <strong><%= f.label :mdp_actuel %></strong>
            <small>
              <i>(Rentre ton mdp pour confirmer les changements)</i><br/></small>
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
        </div>


        <div class="col-md-8">
          <%= button_tag(type: 'submit', class: "btn btn-info") do %>
           <i class="icon-ok icon-white"></i> Modifier
          <% end %>

        </div>
      <% end %>
      <br>
      <div class="col-md-8">
        <h3>Supprimer mon compte</h3>
        <p>Plus végan ? <%= button_to "Supprime ton compte", registration_path(resource_name), data: { confirm: "Tu es sur ?" }, method: :delete, class:"btn btn-danger" %></p>
        <%= link_to "Retour", :back %>
      </div>
    </form>
  </div>
</div>
</div>
