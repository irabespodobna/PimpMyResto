<!DOCTYPE html>
<html>
  <head>
    <title>PimpMyResto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_BROWSER_KEY']}&language=fr" %>
    <%= favicon_link_tag asset_path('carrot.png') %>

  </head>
  <body>
    <div class='layout d-flex flex-column'>
      <div>
        <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: 'alert alert-info' %>
        <% end %>
      </div>
      <div class='main flex-grow-1'>
        <%= yield %>
      </div>
      <div class='footer'><%= render 'layouts/footer2' %></div>
    </div>

  </body>
</html>


