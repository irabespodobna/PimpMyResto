<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>


          <div class="card-body">
            <h5 class="card-title text-center">Register</h5>
            <form class="form-signin">

              <div class="form-label-group">
                <%= f.text_field :first_name, autofocus: true, :placeholder=>"Prénom", :class=>"form-control" %>
                <label for="inputUserame">Prénom</label>
              </div>

              <div class="form-label-group">
                <%= f.text_field :last_name, autofocus: true, :placeholder=>"Prénom", :class=>"form-control" %>
                <label for="inputUserame">Nom</label>
              </div>

              <div class="form-label-group">
                <%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder=>"Email", :class=>"form-control" %>
                <label for="inputEmail">Email address</label>
              </div>

              <hr>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", :placeholder=>"Mot de Passe", :class=>"form-control" %>

                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
              </div>

              <div class="form-label-group">
                 <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder=>"Confirmation Mot de Passe", :class=>"form-control"%>
                <label for="inputConfirmPassword">Confirm password</label>
              </div>

              <%= f.submit "S'enregistrer", :class=>"btn btn-lg btn-primary btn-block text-uppercase"%>


              <%= render "devise/shared/links", :class=>"d-block text-center mt-2 small" %>
              <hr class="my-4">
            </form>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
